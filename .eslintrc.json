{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "rules": {
    "comma-dangle": 0,
    "no-console": 0,
    "no-constant-condition": 0,
    "semi": 1
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
  ],
  "globals": {
    "cc": false,
    "wx": false,
    "CC_BUILD": false,
    "CC_TEST": false,
    "CC_EDITOR": false,
    "CC_PREVIEW": false,
    "CC_DEV": false,
    "CC_DEBUG": false,
    "CC_JSB": false,
    "CC_WECHATGAME_SUB": false,
    "CC_WECHATGAME": false,
    "CC_QQPLAY": false,
    "CC_RUNTIME": false,
    "CC_SUPPORT_JIT": false,
    "Editor": false,
    "_Scene": false,
    "_ccsg": false
  }
}
