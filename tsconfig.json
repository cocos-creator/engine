{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es2015", "es2017", "dom"],
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./bin/.ts",
      "rootDir": "./",
      "strict": true,
      "noImplicitAny": false,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "types": [
        "./@types/globals",
        "./@types/consts",
        "./@types/editor-extends",
        "./@types/wx",
        "./@types/webGL.extras", 
        "./@types/webGL2.extras",
        "./node_modules/@cocos/cannon/CANNON",
        "./node_modules/@cocos/ammo/Ammo",
        "./node_modules/@types/jest/index"
      ]
    },
    "include": [
        "exports/**/*.ts",
        "index.ts"
    ]
  }
